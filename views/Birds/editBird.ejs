<% layout("/layouts/boilerplate.ejs") %>
<body style="background-color: #f1f8e9;">
    <div class="container mt-5">
        <div class="card shadow-sm border-light" style="max-width: 700px; margin: auto;">
            <div class="card-header bg-primary text-white">
                <h4>Add New Bird</h4>
            </div>
            <div class="card-body">
                <form action="/wildlife/Birds/<%=bird._id%>?_method=PUT" method="post" class="needs-validation" novalidate>
                    <!-- Name -->
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" id="name" name="bird[name]" class="form-control" value="<%=bird.name%>" required>
                        <div class="invalid-feedback">Please enter the bird's name.</div>
                    </div>

                    <!-- Scientific Name -->
                    <div class="mb-3">
                        <label for="scientificName" class="form-label">Scientific Name</label>
                        <input type="text" id="scientificName" name="bird[scientific_name]" class="form-control" value="<%=bird.scientific_name%>" required>
                        <div class="invalid-feedback">Please enter the scientific name.</div>
                    </div>

                    <!-- Habitat -->
                    <div class="mb-3">
                        <label for="habitat" class="form-label">Habitat</label>
                        <input type="text" id="habitat" name="bird[habitat]" class="form-control" value="<%=bird.habitat%>" required>
                        <div class="invalid-feedback">Please specify the habitat.</div>
                    </div>

                    <!-- Is Migratory -->
                    <div class="mb-3">
                        <label class="form-label">Is Migratory</label>
                        <div class="form-check">
                            <input type="radio" id="migratoryYes" name="bird[migratory]" value="true" class="form-check-input" required>
                            <label for="migratoryYes" class="form-check-label">Yes</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" id="migratoryNo" name="bird[migratory]" value="false" class="form-check-input" required>
                            <label for="migratoryNo" class="form-check-label">No</label>
                        </div>
                        <div class="invalid-feedback">Please select if the bird is migratory.</div>
                    </div>

                    <!-- Is Extinct -->
                    <div class="mb-3">
                        <label class="form-label">Is Extinct</label>
                        <div class="form-check">
                            <input type="radio" id="extinctYes" name="bird[extinct]" value="true" class="form-check-input" required>
                            <label for="extinctYes" class="form-check-label">Yes</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" id="extinctNo" name="bird[extinct]" value="false" class="form-check-input" required>
                            <label for="extinctNo" class="form-check-label">No</label>
                        </div>
                        <div class="invalid-feedback">Please select if the bird is extinct.</div>
                    </div>

                    <!-- Is Endangered -->
                    <div class="mb-3">
                        <label class="form-label">Is Endangered</label>
                        <div class="form-check">
                            <input type="radio" id="endangeredYes" name="bird[endangered]" value="true" class="form-check-input" required>
                            <label for="endangeredYes" class="form-check-label">Yes</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" id="endangeredNo" name="bird[endangered]" value="false" class="form-check-input" required>
                            <label for="endangeredNo" class="form-check-label">No</label>
                        </div>
                        <div class="invalid-feedback">Please select if the bird is endangered.</div>
                    </div>

                    <!-- Image Link -->
                    <div class="mb-3">
                        <label for="image" class="form-label">Image Link</label>
                        <input type="text" id="image" name="bird[image]" class="form-control" value="<%=bird.image%>" required>
                        <div class="invalid-feedback">Please provide a valid image link.</div>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea id="description" name="bird[description]" class="form-control"  rows="5" required><%=bird.description%></textarea>
                        <div class="invalid-feedback">Please provide a description.</div>
                    </div>

                    <!-- Edit Button -->
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-success btn-sm w-30">Edit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (For form validation handling) -->
    <script>
        (function () {
            'use strict'
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation')
                Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
            }, false)
        })()
    </script>
</body>
